<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:ads="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.sweethome.fractioncalculator.MainActivity"
                                             tools:layout_editor_absoluteY="81dp"
                                             tools:layout_editor_absoluteX="0dp">

    <!-- view for AdMob Banner Ad -->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:srcCompat="@android:color/darker_gray"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        ads:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/imageView1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/btnClearError"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_row="0"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="onClick"
            android:text="CE"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="124dp"/>

        <Button
            android:id="@+id/btnMultiplication "
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="3"
            android:layout_row="1"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="onClick"
            android:text="×"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="196dp"/>

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="3"
            android:layout_row="2"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="onClick"
            android:text="─"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="261dp"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="3"
            android:layout_row="3"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="onClick"
            android:text="＋"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="342dp"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_row="4"
            android:onClick="onClick"
            android:text="0"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="342dp"/>

        <Button
            android:id="@+id/btnSlash"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="1"
            android:layout_row="4"
            android:onClick="onClick"
            android:text="/"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="342dp"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="onClick"
            android:text="1"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="268dp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="onClick"
            android:text="2"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="268dp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="2"
            android:layout_row="3"
            android:onClick="onClick"
            android:text="3"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="268dp"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="onClick"
            android:text="4"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="196dp"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="onClick"
            android:text="5"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="196dp"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="onClick"
            android:text="6"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="196dp"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="onClick"
            android:text="7"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="124dp"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="onClick"
            android:text="8"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="124dp"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="onClick"
            android:text="9"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="124dp"/>

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="3"
            android:layout_row="4"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="onClick"
            android:text="="
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="342dp"/>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="1"
            android:layout_row="0"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="onClick"
            android:text="C"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="124dp"/>

        <Button
            android:id="@+id/btnBackSp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="2"
            android:layout_row="0"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="onClick"
            android:text="⌫"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="124dp"/>

        <Button
            android:id="@+id/btnDivision "
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="3"
            android:layout_row="0"
            android:backgroundTint="@android:color/darker_gray"
            android:onClick="onClick"
            android:text="÷"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="124dp"/>
    </GridLayout>

</android.support.constraint.ConstraintLayout>
